<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/image_placeholder"
        android:layout_marginEnd="16dp"
        android:background="@color/placeholderbg"
        android:layout_width="100dp"
        android:layout_height="150dp"/>

    <View
        android:id="@+id/title_placeholder"
        android:layout_toEndOf="@id/image_placeholder"
        android:background="@color/placeholderbg"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="150dp"
        android:layout_height="10dp"/>

    <View
        android:id="@+id/desc1_placeholder"
        android:layout_toEndOf="@id/image_placeholder"
        android:layout_below="@id/title_placeholder"
        android:background="@color/placeholderbg"
        android:layout_marginBottom="10dp"
        android:layout_width="100dp"
        android:layout_height="8dp"/>

    <View
        android:id="@+id/desc2_placeholder"
        android:layout_toEndOf="@id/image_placeholder"
        android:layout_below="@id/desc1_placeholder"
        android:background="@color/placeholderbg"
        android:layout_marginBottom="10dp"
        android:layout_width="100dp"
        android:layout_height="8dp"/>

    <View
        android:id="@+id/desc3_placeholder"
        android:layout_toEndOf="@id/image_placeholder"
        android:layout_below="@id/desc2_placeholder"
        android:background="@color/placeholderbg"
        android:layout_width="100dp"
        android:layout_height="8dp"/>

</RelativeLayout>